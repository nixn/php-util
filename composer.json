{
    "name": "nixn/php-util",
    "type": "library",
    "description": "PHP language utilities, mostly to code more in functional style.",
    "keywords": ["functional", "language", "utilities", "array", "string", "pipe", "with", "partial"],
    "license": "MIT",
    "authors": [
        {
            "name": "nix",
            "homepage": "https://keybase.io/nixn",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpdocumentor/shim": "^3.8",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "~11.5"
    },
    "autoload": {
        "psr-4": {
            "nixn\\php\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpdocumentor/shim": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.2.x-dev"
        }
    },
    "scripts": {
        "test": "phpunit --no-coverage",
        "test+coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit"
        ],
        "stan": "phpstan",
        "stan-tests": "phpstan analyse -c phpstan-tests.neon",
        "api-docs": "phpdoc"
    }
}
